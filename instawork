#!/usr/bin/env sh

# Yarn commands
alias android-emulator-5='cd $ANDROID_HOME/tools && ./emulator -avd 5.1_Lollipop'
alias android-emulator-6='cd $ANDROID_HOME/tools && ./emulator -avd 6.0_Marshmallow'
alias android-emulator-7='cd $ANDROID_HOME/tools && ./emulator -avd 7.1.1_Nougat'
alias android-emulator-8='cd $ANDROID_HOME/tools && ./emulator -avd 8.0_Nougat'
alias fresh='yarn start:fresh'
alias generate='yarn generate'
alias install='yarn sync'
alias lint='yarn test:lint'
alias release='yarn run:android:release'
alias run='yarn run:ios'
alias shake='adb shell input keyevent 82'
alias start='yarn start'
alias storybook='yarn storybook'
alias test='yarn test'

# Bookmarked websites
alias asana='open https://app.asana.com/0/244065166232575/board'
alias branches='open https://github.com/Instawork/mobile/branches/yours'
alias github='open https://github.com/instawork/mobile'
alias my-tasks='open https://app.asana.com/0/269963204484929/list'
alias new-pull-request='open https://github.com/Instawork/mobile/compare/$(git rev-parse --abbrev-ref HEAD)?expand=1'
alias pulls='open https://github.com/instawork/mobile/pulls'
alias sprint-board='open https://app.asana.com/0/244065166232575/board'
alias sprint='open https://app.asana.com/0/244065166232575/board'
alias upcoming='open https://app.asana.com/0/518926233438259/list'

# System commands
alias clean='rm -rf /Users/dikarel/Library/Caches/Yarn /Users/dikarel/Library/Developer/Xcode/DerivedData'
alias dotfiles='code ~/Desktop/dotfiles'
alias slack='open /Applications/Slack.app'
alias slak='open /Applications/Slack.app'
alias stop='echo Killing all dev processes && killall flow esprint node watchman'
alias zeplin='open /Applications/Zeplin.app'

# Work routine
alias gohome='stop && clean && brew upgrade && brew cleanup && sudo shutdown -h now'
alias migrate='python manage.py migrate'
alias simulator='open /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app'
alias venv='source venv/bin/activate'

# Mnemonics
alias an5='android-emulator-5'
alias an6='android-emulator-6'
alias an7='android-emulator-7'
alias an8='android-emulator-8'
alias bb='storybook'
alias cl='clear'
alias ff='fresh'
alias gg='generate'
alias ggbb='gg && bb'
alias ggff='gg && ff'
alias ggss='gg && ss'
alias ggtt='gg && tt'
alias hhxx='hh && xx'
alias ii='install'
alias iigg='ii && gg'
alias iiggbb='ii && gg && bb'
alias iiggff='ii && gg && ff'
alias iiggss='ii && gg && ss'
alias iiggtt='ii && gg && tt'
alias pr='new-pull-request'
alias rr='run'
alias rrxx='rr && xx'
alias rx='rr && xx'
alias slrx='sl1 && rr && xx'
alias ss='start'
alias tt='test'
alias xx='exit'
